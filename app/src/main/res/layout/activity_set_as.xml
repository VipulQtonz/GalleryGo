<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBgScreen"
    tools:context=".activity.SetAsActivity">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/ripple_effect"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_back" />


    <androidx.cardview.widget.CardView
        android:id="@+id/llApplyOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnApply"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorDialogBg"
        app:cardCornerRadius="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHomeScreen"
                style="@style/CustomFontMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:text="@string/home_screen"
                android:textColor="?attr/colorTitleText"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="?attr/colorEditTextHint" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLockScreen"
                style="@style/CustomFontMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:text="@string/lock_screen"
                android:textColor="?attr/colorTitleText"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="?attr/colorEditTextHint" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCarouselWallpaper"
                style="@style/CustomFontMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:text="@string/carousel_wallpaper"
                android:textColor="?attr/colorTitleText"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="?attr/colorEditTextHint" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHomeAndLockScreens"
                style="@style/CustomFontMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:text="@string/home_amp_lock_screens"
                android:textColor="?attr/colorTitleText"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="?attr/colorEditTextHint" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancel"
                style="@style/CustomFontMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:text="@string/cancel"
                android:textColor="?attr/colorEditTextHint"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnApply"
        style="@style/CustomFontMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/_12sdp"
        android:background="@drawable/bg_rounded_corner_btn"
        android:paddingHorizontal="@dimen/_50sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:stateListAnimator="@null"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />
</RelativeLayout>